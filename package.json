{
  "name": "vanilla-beans",
  "version": "0.0.1",
  "description": "Libs for making browser games using vanilla JavaScript",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:min": "./combine-files.js src/ build/vanilla-beans.js \"\n\n\" && uglifyjs --compress -o build/vanilla-beans.min.js -- build/vanilla-beans.js",
    "build": "npm run build:min",
    "watch:js": "onchange \"src/**/*.js\" -- npm run build",
    "watch": "npm-run-all --parallel watch:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kr4ft3r/vanilla-beans.git"
  },
  "author": "kr4ft3r.itch.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kr4ft3r/vanilla-beans/issues"
  },
  "homepage": "https://github.com/kr4ft3r/vanilla-beans#readme",
  "devDependencies": {
    "combine-files": "^1.1.8",
    "minify": "^11.1.1",
    "onchange": "^7.1.0",
    "uglify-js": "^3.17.4"
  }
}
